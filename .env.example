# AI Admissions Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to Git!

# ========================================
# AWS Configuration
# ========================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ========================================
# Salesforce Credentials
# ========================================
# Get these from your Salesforce instance
SALESFORCE_USERNAME=your-username@example.com
SALESFORCE_PASSWORD=your-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_DOMAIN=test  # 'test' for sandbox, 'login' for production

# ========================================
# Twilio Credentials
# ========================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886  # Twilio WhatsApp sandbox number

# ========================================
# Bedrock AgentCore
# ========================================
# These are set after deploying the agent
AGENT_ID=your-agent-id
AGENT_ALIAS_ID=your-agent-alias-id
BEDROCK_MODEL_ID=us.amazon.nova-pro-v1:0
BEDROCK_MEMORY_ID=your-memory-id
MODEL_TEMPERATURE=0.7

# ========================================
# Bedrock Knowledge Base
# ========================================
BEDROCK_KNOWLEDGE_BASE_ID=your-kb-id

# ========================================
# DynamoDB Tables
# ========================================
# These are created by CDK and should match your stack outputs
DYNAMODB_SESSIONS_TABLE=WhatsappSessions
DYNAMODB_MESSAGES_TABLE=WhatsAppMessageTracking

# ========================================
# SQS Queues
# ========================================
# Get this from CDK stack outputs
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/twilio-whatsapp-queue

# ========================================
# ECR Repository
# ========================================
# Get this from CDK stack outputs
ECR_REPOSITORY=admissions-agent
ECR_REPOSITORY_URI=123456789012.dkr.ecr.us-east-1.amazonaws.com/admissions-agent

# ========================================
# GitHub (for Amplify deployment)
# ========================================
GITHUB_OWNER=your-github-org
GITHUB_REPO=admissions-ai-agent
GITHUB_BRANCH=main
# Store GitHub token in AWS Secrets Manager, not here!

# ========================================
# Amplify
# ========================================
# Get these after deploying Amplify stack
AMPLIFY_APP_ID=your-amplify-app-id
AMPLIFY_BRANCH=main

# ========================================
# API Endpoints
# ========================================
# Get these from CDK stack outputs after deployment
API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod
AGENT_PROXY_URL=https://your-function-url.lambda-url.us-east-1.on.aws

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
