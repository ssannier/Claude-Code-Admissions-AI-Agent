# Frontend Environment Variables Template
# Copy this file to .env.local for development
# NEVER commit .env.local with real values to Git!

# ========================================
# API Endpoints
# ========================================

# Form Submission API (API Gateway endpoint)
# Development: http://localhost:3001
# Production (us-west-2): https://9ppnenaq01.execute-api.us-west-2.amazonaws.com/prod
NEXT_PUBLIC_API_URL=http://localhost:3001

# Agent Proxy (Lambda Function URL with SSE)
# Development: http://localhost:3002
# Production (us-west-2): https://56esu4j6ukmbjfwzqoml7jsjvq0uwrdw.lambda-url.us-west-2.on.aws
NEXT_PUBLIC_AGENT_PROXY_URL=http://localhost:3002

# ========================================
# Optional Configuration
# ========================================

# Enable debug logging (true/false)
# NEXT_PUBLIC_DEBUG=false

# Analytics tracking ID (if using Google Analytics)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN (if using error tracking)
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
